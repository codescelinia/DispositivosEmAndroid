  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@screens/*": ["./src/screens/*"],
      "@components/*": ["./components/*"],
      "@src/*": ["./src/*"]
